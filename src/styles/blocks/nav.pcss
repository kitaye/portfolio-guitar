.nav-list {
    display: flex;
    flex-wrap: wrap;

    @include tablets() {
        margin-bottom: 30px;
    }
}

.nav-item {
    margin: 0 70px 30px 0;
    font-size: 14px;

    @include tablets() {
        font-size: 16px;
        margin: 0 55px 30px 0;
    }

    @include desktop() {
        font-size: 18px;
    }
}

.nav-link {
    text-decoration: none;
    cursor: pointer;
}
