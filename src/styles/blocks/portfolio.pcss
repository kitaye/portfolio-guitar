.portfolio {
    font-family: "Open Sans", Helvetica, sans-serif;
}

.portfolio-image {
    background-image: url("../images/content/portfolio.png");
    width: 325px;
    height: 185px;
}

.container__title-wrap {
    padding: 100px 0 30px 0;
    margin: 0 auto;
    width: max-content;
}

.portfolio__title {
    color: $navy;
    font-size: 24px;
    font-weight: 700;
}

.portfolio__png {
    margin-bottom: 60px;
}

.portfolio__skills {
    display: flex;
    margin: 0 auto;
    width: max-content;
    margin-bottom: 30px;
}

.portfolio__skills-btn {
    padding: 17px;
    background: none;
}