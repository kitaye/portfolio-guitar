.presentation {
    padding: 100px 0 235px;
    background-image: url("../images/content/wood-bcg.png");
    position: relative;

    @include tablets() {
        padding: 120px 0 350px;
    }

    @include desktop() {
        padding: 150px 0;
    }
}

.presentation__list {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.presentation__list_frontend {
    margin-bottom: 30px;
}

.presentation__title {
    color: $white;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 30px;

    @include tablets() {
        font-size: 30px;
        line-height: 1.1;
        text-align: center;
        margin: 0 24% 30px;
    }

    @include desktop() {
        margin: 0 35% 60px 25%;
    }

    @include desktopHd() {
        margin: 0 auto 60px;
    }
}

.presentation__skill-container {
    @include desktop() {
        margin-left: 360px;
    }

    @include desktopHd() {
        margin-left: 630px;
        margin-right: 150px;
    }
}

.presentation__text {
    opacity: .5;
    color: $white;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.8;
    margin-bottom: 60px;

    @include tablets() {
        margin: 0 18% 60px;
        line-height: 1.8;
        font-size: 16px;
        text-align: center;
    }

    @include desktop() {
        text-align: left;
        margin: 0 26% 100px 25%;
    }

    @include desktopHd() {
        margin: 0 30% 100px 36%;
    }
}

.presentation__frontend {
    margin-bottom: 67px;
    text-align: center;
    color: $white;
    font-size: 18px;
    font-weight: 700;
}

.presentation__subtitle {
    text-align: center;
    margin-bottom: 35px;

    @include tablets() {
        font-size: 20px;
        font-weight: 700;
    }

    @include desktop() {
        text-align: left;
        font-size: 24px;
    }
}

.presentation__Workflow {
    margin-bottom: 30px;
    text-align: center;
    color: $white;
    font-size: 18px;
    font-weight: 700;
}

.presentation__item {
    width: 115px;
    height: 115px;
    position: relative;
    margin-bottom: 30px;

    @include tablets() {
        margin-bottom: 0;
    }

    @include desktop() {
        width: 135px;
        height: 135px;
    }
}

.presentation__icon-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    opacity: .5;
    font-size: 14px;
    font-weight: 700;
    line-height: 2;

    @include desktop() {
        font-size: 18px;
        font-weight: 700;
    }
}

.presentation__icon {
    width: 115px;
    height: 115px;
    fill: transparent;
    transform: rotate(180deg);

    @include desktop() {
        width: 135px;
        height: 135px;
    }
}

.presentation__cirle {
    stroke-dasharray: 360;

    &_under {
        stroke: #363635;
        stroke-width: 5px;
    }

    &_above {
        stroke: $orange;
        stroke-width: 10px;
    }
}

.presentation__hands-img {
    background-image: url("../images/content/mobile-hands.png");
    width: 338px;
    height: 235px;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background-repeat: no-repeat;
    background-size: cover;

    @include tablets() {
        width: 486px;
        height: 337px;
    }

    @include desktop() {
        background-image: url("../images/content/hands.png");
        width: 490px;
        height: 707px;
        left: -90px;
        bottom: -65px;
        transform: none;
    }

    @include desktopHd() {
        width: 682px;
        height: 983px;
        left: 0px;
        bottom: -92px
    }
}